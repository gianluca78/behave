<script>
    $( document ).ready(function() {
        if($('[data-step]').length > 0) {
            $('#take-a-tour').parent().removeClass('hidden');
        }
    });


    $('#take-a-tour').click(function(e) {
            e.preventDefault();

            console.log($('[data-step]').length);

            introJs().setOption("showStepNumbers", "false").start();
        }
    );



</script>

