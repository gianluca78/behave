{% extends 'base.html.twig' %}

{% block pageTitle %}
    {{ observation.name }}
{% endblock %}

{% block title %}
    {{ title }}
{% endblock %}

{% block breadcrumbs %}
    <li>
        <a href="{{ path('homepage') }}">Home</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a href="{{ path('measure_list') }}">Measures</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <span>{{ observation.name }}</span>
    </li>
{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gift"></i>Add a new student</div>
        </div>
        <div class="portlet-body form">
        {% for key, field in form.children %}
            {% if key != 'submit' %}
                {{ form_row(field) }}
            {% endif %}
        {% endfor %}

        <div class="form-actions">
            <div class="row">
                <div class="col-md-offset-3 col-md-9">
                    {{ form_widget(form.submit, {'class': 'btn btn-circle green'}) }}
                    <button type="button" class="btn btn-circle grey-salsa btn-outline">Cancel</button>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        audioPath = '{{ asset('sounds/171756__nenadsimic__picked-coin-echo-2.wav') }}';
    </script>

    <script src="{{ asset('js/jquery-ui.min.js') }}"></script>
    <script src="{{ asset('js/behavioral-recording-tools.js') }}"></script>

    <script>
        $( document ).ready(function() {
            $( '#form' ).behavioralRecordingTool();
        });

        $( '.square' ).on('click', function(e){
            $( "input[name*='xValue']" ).val($( this ).attr('data-row'));
            $( "input[name*='yValue']" ).val($( this ).attr('data-column'));
        });
    </script>
{% endblock %}