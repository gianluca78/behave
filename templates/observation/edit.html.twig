{% extends 'base.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block breadcrumbs %}
    <li>
        <a href="{{ path('homepage') }}">Home</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a href="{{ path('student_list') }}">Students</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a href="{{ path('observation_student_list', { 'id': student.id }) }}">Observations</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <span>Edit</span>
    </li>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $( document ).ready(function() {
            isEnabled = ($("#observation_edit_base_observation_isEnabled").val() == '0') ? false : true;

            $("#observation_edit_base_observation_isEnabled").bootstrapSwitch('state', isEnabled);
            $("#observation_edit_base_observation_isEnabled").bootstrapSwitch('size', 'small');
        });
    </script>
{% endblock %}

{% block body %}
    {{ form_start(form) }}

    <div class="portlet box green">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-gift"></i>New observation
        </div>

        <div class="actions">
            {{ form_widget(form.base_observation.isEnabled) }}
        </div>

    </div>

    <div id="measure-form" class="portlet-body">
        {{ form_row(form.base_observation.name) }}
        {{ form_row(form.base_observation.description) }}
        {{ form_row(form.base_observation.measure) }}
        {{ form_row(form.base_observation.observerUsername) }}
        {{ form_row(form.base_observation.observerUserId) }}

        {{ form_row(form._token) }}

        <div class="form-actions">
            <div class="row">
                <div class="col-md-offset-3 col-md-9">
                    {{ form_widget(form.base_observation.submit, {'class': 'btn btn-circle green'}) }}
                    <button type="button" class="btn btn-circle grey-salsa btn-outline">Cancel</button>
                </div>
            </div>
        </div>

        {{ form_end(form, {'render_rest': false}) }}

    </div>
    </div>

{% endblock %}