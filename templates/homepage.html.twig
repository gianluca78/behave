        <!-- BEGIN CONTENT -->
        <div class="page-content-wrapper">
            <!-- BEGIN CONTENT BODY -->
            <div class="page-content">
                <!-- BEGIN PAGE HEADER-->

                <!-- BEGIN PAGE TITLE-->
                <h1 class="page-title"> {% trans %}Behavioral management model across europe (BeHave) project{% endtrans %}
                    <small>ERASMUS + KA2 Strategic Partnership for school education - 2017-1-IT02-KA201-036540</small>
                </h1>
                <!-- END PAGE TITLE-->
                <!-- END PAGE HEADER-->
                <!-- BEGIN CONTENT HEADER -->
                <div class="row margin-bottom-40 about-header">
                    <div class="col-md-12">
                        <h1>{% trans %}BEHAVE application{% endtrans %}</h1>

                        <h2>{% trans %}an ICT-based solution supporting the observation and the management of problem behaviours{% endtrans %}</h2>

                        <div class="btn-group">
                            <button type="button" class="btn btn-primary" data-toggle="dropdown">{% trans %}LANGUAGES{% endtrans %}<i class="fa fa-angle-down"></i></button>
                            <ul class="dropdown-menu pull-right" role="menu">
                                <li>
                                    <a href="{{ path('homepage', {'_locale': 'en'}) }}">
                                        <img src="{{ asset('icons/flags/square/en.svg') }}" alt="English language" title="English language" width="20px"> {% trans %}English{% endtrans %}</a>
                                </li>
                                <li>
                                    <a href="{{ path('homepage', {'_locale': 'de'}) }}">
                                        <img src="{{ asset('icons/flags/square/de.svg') }}" alt="German language" title="German language" width="20px"> {% trans %}German{% endtrans %}</a>
                                </li>
                                <li>
                                    <a href="{{ path('homepage', {'_locale': 'it'}) }}">
                                        <img src="{{ asset('icons/flags/square/it.svg') }}" alt="Italian language" title="Italian language" width="20px"> {% trans %}Italian{% endtrans %}</a>
                                </li>
                                <li>
                                    <a href="{{ path('homepage', {'_locale': 'pt'}) }}">
                                        <img src="{{ asset('icons/flags/square/pt.svg') }}" alt="Portuguese language" title="Portuguese language" width="20px"> {% trans %}Portuguese{% endtrans %}</a>
                                </li>
                                <li>
                                    <a href="{{ path('homepage', {'_locale': 'ro'}) }}">
                                        <img src="{{ asset('icons/flags/square/ro.svg') }}" alt="Romanian language" title="Romanian language" width="20px"> {% trans %}Romanian{% endtrans %}</a>
                                </li>
                            </ul>
                        </div>

                        <button type="button" onclick="location.href='/connect/auth0'" class="btn btn-danger">LOGIN</button>
                        <button type="button" onclick="location.href='{{ path('online-guide') }}'" class="btn btn-warning">?</button>
                    </div>
                </div>
                <!-- END CONTENT HEADER -->
                <!-- BEGIN CARDS -->
                <div class="row margin-bottom-20">
                    <div class="col-lg-4 col-md-6">
                        <div class="portlet light">
                            <div class="card-icon">
                                <i class="icon-cursor-move font-red-sunglo theme-font"></i>
                            </div>
                            <div class="card-title">
                                <span> {% trans %}Measure{% endtrans %}</span>
                            </div>
                            <div class="card-desc">
                                <span> {% trans %}Build your session-to-session measure using many different widgets{% endtrans %}</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="portlet light">
                            <div class="card-icon">
                                <i class="icon-bag font-green-haze theme-font"></i>
                            </div>
                            <div class="card-title">
                                <span> {% trans %}Collect{% endtrans %}</span>
                            </div>
                            <div class="card-desc">
                <span> {% trans %}Collect data directly throught your favourite device: personal computer, mobile phone, or tablet{% endtrans %}</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="portlet light">
                            <div class="card-icon">
                                <i class="icon-graph font-purple-wisteria theme-font"></i>
                            </div>
                            <div class="card-title">
                                <span>{% trans %}Analyze{% endtrans %}</span>
                            </div>
                            <div class="card-desc">
                <span> {% trans %}Starting from a Montecarlo simulation, the application chooses the best algorithm to calculate the effect size of the applied behavioural intervention plan{% endtrans %}
                </span>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- END CARDS -->

            </div>
            <!-- END CONTENT BODY -->
        </div>
        <!-- END CONTENT -->
        <!-- BEGIN QUICK SIDEBAR -->

    </div>
    <!-- END CONTAINER -->
